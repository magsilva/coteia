around(): execr(user_login($username, $password))
{
	global $LOG_DIR;

	$ip = $_SERVER[ 'REMOTE_ADDR' ];
	$file = fopen( $LOG_DIR . "/auth.log", "a+");

	$result = proceed($username, $password);
	if ($result) {
		fwrite( $file, time() . ", LOGIN, $ip" . "\\n" );
	} else {
		fwrite( $file, time() . ", FAILED LOGIN, $ip" . "\\n" );
	}
}

after(): exec(user_logout())
{
	global $LOG_DIR;

	$file = fopen( $LOG_DIR . "/auth.log", "a+");
	fwrite( $file, time() . ", LOGOUT, $ip" . "\\n" );
}
