	global $ce_dbname;

	$dbh_ce = dbConnection();

    	# seleciona base de dados
   	mysql_select_db($ce_dbname,$dbh_ce);

	$comando_sql = "select count(*) from aula_coteia where curso_id=$curso_id";
	//echo $comando_sql;
	$res = mysql_query($comando_sql,$dbh_ce);
