function convert_date($date)
  {
    $array_temp = explode("-", $date);
    $vetor_data[0] = $array_temp[2];
    $vetor_data[1] = $array_temp[1];
    $vetor_data[2] = $array_temp[0];

    $str = "$vetor_data[0]-$vetor_data[1]-$vetor_data[2] ";

    return $str;
} // fim function convert_date

